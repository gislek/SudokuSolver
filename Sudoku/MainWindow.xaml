<Window x:Class="Sudoku.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sudoku"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="solveBtn" Content="Solve" HorizontalAlignment="Left" Margin="411,173,0,0" VerticalAlignment="Top" Width="75" Click="solveBtn_Click" />
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="45,51,0,0" VerticalAlignment="Top" HeadersVisibility="None" CanUserAddRows="False"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="366,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="browseBtn" Content="Browse" HorizontalAlignment="Left" Margin="411,148,0,0" VerticalAlignment="Top" Width="75" Click="browseBtn_Click"/>
        <Button x:Name="resetBtn" Content="Reset" HorizontalAlignment="Left" Margin="411,199,0,0" VerticalAlignment="Top" Width="75" Click="resetBtn_Click"/>

    </Grid>
</Window>
